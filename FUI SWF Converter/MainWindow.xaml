<Window x:Class="FUI_SWF_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUI_SWF_Converter"
        mc:Ignorable="d"
        Title="FUI SWF Converter"
        Height="496"
        Width="800"
        Icon="/FUI SWF Converter.png"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Select Folder -->
            <RowDefinition Height="Auto"/>
            <!-- Folder Path -->
            <RowDefinition Height="Auto"/>
            <!-- Convert Buttons Row -->
            <RowDefinition Height="Auto"/>
            <!-- Status -->
            <RowDefinition Height="Auto"/>
            <!-- Progress Bar -->
            <RowDefinition Height="*"/>
            <!-- Log Box -->
            <RowDefinition Height="Auto"/>
            <!-- Footer Text -->
        </Grid.RowDefinitions>

        <!-- Select Folder -->
        <Button x:Name="btnSelectFolder"
                Grid.Row="0"
                Content="Select Folder"
                Click="BtnSelectFolder_Click"
                Margin="0,0,0,10"/>

        <!-- Folder Path -->
        <TextBlock x:Name="txtSelectedFolder"
                   Grid.Row="1"
                   Text="No folder selected."
                   Margin="0,0,0,10"/>

        <!-- Convert Buttons Side by Side -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnConvertToSwf"
                    Grid.Column="0"
                    Content="Convert .fui → .swf"
                    Click="BtnConvertToSwf_Click"
                    Margin="0,0,5,0"/>

            <Button x:Name="btnConvertToFui"
                    Grid.Column="1"
                    Content="Convert .swf → .fui"
                    Click="BtnConvertToFui_Click"
                    Margin="5,0,0,0"/>
        </Grid>

        <!-- Status -->
        <TextBlock x:Name="txtStatus"
                   Grid.Row="3"
                   Text=""
                   Foreground="{StaticResource AccentBrush}"
                   Margin="0,0,0,5"/>

        <!-- Progress Bar -->
        <ProgressBar x:Name="progressBar"
                     Grid.Row="4"
                     Height="20"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Margin="0,0,0,10"/>

        <!-- Log Box -->
        <TextBox x:Name="logBox"
                 Grid.Row="5"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Margin="0"
                 Padding="5"
                 HorizontalAlignment="Stretch"/>

        <!-- Footer Text -->
        <TextBlock Grid.Row="6"
                   Text="Select a folder containing .fui or .swf files to convert."
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
