<Window x:Class="FUI_SWF_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FUI_SWF_Converter"
        mc:Ignorable="d"
        Title="FUI SWF Converter"
        Height="496"
        Width="800"
        Icon="/FUI SWF Converter.png"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Select Folder -->
            <RowDefinition Height="Auto"/>
            <!-- Folder Path -->
            <RowDefinition Height="Auto"/>
            <!-- Convert Buttons Row -->
            <RowDefinition Height="Auto"/>
            <!-- Status -->
            <RowDefinition Height="Auto"/>
            <!-- Progress Bar -->
            <RowDefinition Height="*"/>
            <!-- Log Box -->
            <RowDefinition Height="Auto"/>
            <!-- Footer Text -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="FUI SWF Converter"
                   FontFamily="pack://application:,,,/Fonts/#Orbitron Black"
                   FontSize="32"
                   FontWeight="Black"
                   Foreground="{StaticResource AccentBrush}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Select Folder -->
        <Button Grid.Row="1" Click="BtnSelectFolder_Click" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="16"
                           Text="&#xED25;"
                           Foreground="{DynamicResource AccentBrush}"
                           VerticalAlignment="Center"
                           Margin="0,2,5,0"/>
                <TextBlock Grid.Column="1"
                           Text="Select Folder"
                           VerticalAlignment="Center"/>
            </Grid>
        </Button>

        <!-- Folder Path -->
        <TextBlock x:Name="txtSelectedFolder"
                   Grid.Row="2"
                   Text="No folder selected."
                   Margin="0,0,0,10"/>

        <!-- Convert Buttons Side by Side -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Convert .fui → .swf -->
            <Button x:Name="btnConvertToSwf" Grid.Column="0" Click="BtnConvertToSwf_Click" Margin="0,0,5,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Text="&#xEBE7;"
                               Foreground="{DynamicResource AccentBrush}"
                               VerticalAlignment="Center"
                               Margin="0,2,5,0"/>
                    <TextBlock Grid.Column="1"
                               Text="Convert .fui → .swf"
                               VerticalAlignment="Center"/>
                </Grid>
            </Button>

            <!-- Convert .swf → .fui -->
            <Button x:Name="btnConvertToFui" Grid.Column="1" Click="BtnConvertToFui_Click" Margin="5,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               Text="&#xEC52;"
                               Foreground="{DynamicResource AccentBrush}"
                               VerticalAlignment="Center"
                               Margin="0,2,5,0"/>
                    <TextBlock Grid.Column="1"
                               Text="Convert .swf → .fui"
                               VerticalAlignment="Center"/>
                </Grid>
            </Button>
        </Grid>

        <!-- Status -->
        <TextBlock x:Name="txtStatus"
                   Grid.Row="4"
                   Text=""
                   Foreground="{StaticResource AccentBrush}"
                   Margin="0,0,0,5"/>

        <!-- Progress Bar -->
        <ProgressBar x:Name="progressBar"
                     Grid.Row="5"
                     Height="20"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Margin="0,0,0,10"/>

        <!-- Log Box -->
        <TextBox x:Name="logBox"
                 Grid.Row="6"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Margin="0"
                 Padding="5"
                 HorizontalAlignment="Stretch"/>

        <!-- Footer Text -->
        <TextBlock Grid.Row="7"
                   Text="Select a folder containing .fui or .swf files to convert."
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
